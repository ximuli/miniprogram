.wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  background-color: #F6F6F6;
  padding: 32rpx 30rpx;
}

.wrapper .nav-item {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0rpx 0rpx 38rpx 0rpx rgba(199, 199, 199, 0.33);
  box-sizing: border-box;
  width: 690rpx;
  height: 340rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 32rpx;
}

.wrapper .nav-item .nav-item-left {
  display: flex;
  flex-direction: column;
}

.wrapper .nav-item .nav-item-left .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #222222;
  line-height: 42rpx;
  margin-bottom: 18rpx;
}

.wrapper .nav-item .nav-item-left .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 42rpx;
  margin-bottom: 66rpx;
}

.wrapper .nav-item .nav-item-left .btn {
  background-color: rgba(73, 128, 255, 0.08);
  border-radius: 26rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #4980FF;
  line-height: 52rpx;
  text-align: center;
  width: 150rpx;
}

.wrapper .nav-item .nav-item-right .nav-item-right-icon {
  width: 260rpx;
  height: 220rpx;
}