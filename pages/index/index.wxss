.wrapper {
  height: 100%;
  display: flex; flex-direction: column; justify-content: center; align-items: center;
  background: url(https://i.loli.net/2020/01/06/IMmaKXSTCUwWfsO.jpg) center/cover no-repeat;
}

.wrapper .section {
  width: 50%; text-align: center;
  padding: 30rpx 0rpx;
  border-radius: 12rpx; margin-bottom: 50rpx;
  background-color: #FFF;
}

.wrapper .section:active {
  background-color: #F6F6F6;
}